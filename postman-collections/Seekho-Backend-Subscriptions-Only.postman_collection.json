              "host": ["{{base_url}}"],
              "path": ["api", "webhooks", "razorpay"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Check webhook response",
                  "if (pm.response.code === 200) {",
                  "    console.log('‚úÖ Webhook processed successfully');",
                  "} else {",
                  "    console.log('‚ùå Webhook failed:', pm.response.text());",
                  "}"
