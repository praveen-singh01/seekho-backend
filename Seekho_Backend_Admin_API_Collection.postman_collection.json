          }
        },
        {
          "name": "Get Category Analytics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admin/categories/{{categoryId}}/analytics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "categories", "{{categoryId}}", "analytics"]
            }
          }
        }
      ]
    },
