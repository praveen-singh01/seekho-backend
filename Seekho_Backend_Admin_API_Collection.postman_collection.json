              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "categories", "{{categoryId}}"]
            }
          }
        },
        {
          "name": "Reorder Categories",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categoryOrders\": [\n    {\n      \"id\": \"507f1f77bcf86cd799439011\",\n      \"order\": 1\n    },\n    {\n      \"id\": \"507f1f77bcf86cd799439012\",\n      \"order\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/categories/reorder",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "categories", "reorder"]
