# Server Configuration
PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/payments-svc

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE=7d

# Multi-Tenant Configuration
SUPPORTED_PACKAGES=com.gumbo.learning,com.gumbo.english
DEFAULT_PACKAGE_ID=com.gumbo.learning

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Stripe Configuration (Alternative)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Subscription Configuration
TRIAL_PRICE=100  # ₹1 in paise
MONTHLY_PRICE=11700  # ₹117 in paise (₹99 + 18% GST)
MONTHLY_BASE_PRICE=9900  # ₹99 in paise (base price before GST)
YEARLY_PRICE=49900  # ₹499 in paise
TRIAL_DURATION_DAYS=7

# Razorpay Plan IDs (to be configured in Razorpay dashboard)
RAZORPAY_MONTHLY_PLAN_ID=your-monthly-plan-id
RAZORPAY_YEARLY_PLAN_ID=your-yearly-plan-id

# Webhook Configuration
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
